<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christospaspalieris.educationprogram.QuizFragment"
    android:background="@drawable/exam"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <com.example.christospaspalieris.educationprogram.TimerView
        android:id="@+id/timer_test"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:circleColor="@color/myColor3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/question_test"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/question_test"
        app:layout_constraintBottom_toBottomOf="@+id/question_test"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/question_test"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/start_test"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/start_quiz_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Start "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/question_test"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/question_test"
        app:layout_constraintBottom_toBottomOf="@+id/question_test"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/question_test"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/question_test"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus2textView"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="256dp"
        android:layout_height="189dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/answer1_test"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_quiz"
            android:visibility="invisible"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/answer2_test"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_quiz"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/answer3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/answer3_test"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_quiz"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/answer4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/answer4_test"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_quiz"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/score_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="33dp"
        android:fontFamily="casual"
        android:text="Score"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <TextView
        android:id="@+id/plus2textView_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="243dp"
        android:layout_marginTop="33dp"
        android:text="+1"
        android:textAlignment="center"

        android:textColor="@color/myColor1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintLeft_toRightOf="@+id/score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <RatingBar
        android:id="@+id/ratingBar_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:numStars="5"
        android:stepSize=".5"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
        app:layout_constraintRight_toRightOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/rate_button_test"
        android:layout_width="97dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="139dp"
        android:background="@drawable/button_quiz"
        android:fontFamily="casual"
        android:text="Submit"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="@+id/ratingBar"
        app:layout_constraintRight_toRightOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.089" />


</android.support.constraint.ConstraintLayout>
